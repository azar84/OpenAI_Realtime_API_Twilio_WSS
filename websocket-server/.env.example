# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Server Configuration
PORT=8081

# Public URL (set automatically by startup scripts, or manually for production)
PUBLIC_URL=https://your-ngrok-url.ngrok-free.app

# N8N Integration (Optional - for custom tools)
N8N_TOOL_URL=https://n8n.yourhost.com/webhook/tools/lookup_customer
N8N_SECRET=your-n8n-webhook-secret-here

# Twilio Configuration (if needed for direct integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Development/Debug Settings
NODE_ENV=development
DEBUG=false
